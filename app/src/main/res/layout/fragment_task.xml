<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_task"
    tools:context="co.edu.udea.compumovil.socialchallenge.TaskFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Task"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:id="@+id/textView_task" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/editText_task"
            android:layout_below="@+id/textView_task"
            android:background="@drawable/input_background"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:layout_below="@+id/c_mon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue"
            android:layout_below="@+id/c_tue"
            android:layout_toRightOf="@+id/c_mon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed"
            android:layout_below="@+id/c_wed"
            android:layout_toRightOf="@+id/c_tue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu"
            android:layout_below="@+id/c_thu"
            android:layout_toRightOf="@+id/c_wed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fry"
            android:layout_below="@+id/c_fry"
            android:layout_toRightOf="@+id/c_thu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat"
            android:layout_below="@+id/c_sat"
            android:layout_toRightOf="@+id/c_fry"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:layout_below="@+id/c_sun"
            android:layout_toRightOf="@+id/c_sat"/>

        <CheckBox
            android:id="@+id/c_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/c_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_mon"/>
        <CheckBox
            android:id="@+id/c_wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_tue"/>
        <CheckBox
            android:id="@+id/c_thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_wed"/>

        <CheckBox
            android:id="@+id/c_fry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_thu"/>

        <CheckBox
            android:id="@+id/c_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_fry"/>

        <CheckBox
            android:id="@+id/c_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_sat"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Begin at:"
            android:textSize="17dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:layout_marginRight="15dp"
            android:id="@+id/edit_beginAt"
            android:padding="@dimen/appbar_padding_top"
            android:background="@drawable/input_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish at:"
            android:textSize="17dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:layout_marginRight="10dp"
            android:id="@+id/edit_finishAt"
            android:padding="@dimen/appbar_padding_top"
            android:background="@drawable/input_background"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/task_added"
        android:background="@drawable/button_background"/>

</LinearLayout>
